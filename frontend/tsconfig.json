{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "verbatimModuleSyntax": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": ["svelte"],
        "baseUrl": "."
      },
      "include": ["./shared/**/*", "*.svelte"],
      "exclude": ["node_modules"]
}